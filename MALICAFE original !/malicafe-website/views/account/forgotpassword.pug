extends ../common/base.pug

block content
    body.my-login-page
        section.h-100
            .container.h-100
                .row.justify-content-md-center.align-items-center.h-100
                    .card-wrapper
                        .brand
                            img(src='../static/images/logo.png')
                        .card.fat
                            .card-body
                                h4.card-title Forgot Password
                                form(method='POST')
                                    .form-group
                                        label(for='email') E-Mail Address
                                        input#email.form-control(type='email', name='email', value='', required='', autofocus='')
                                        .form-text.text-muted
                                            | By clicking "Reset Password" we will send a password reset link
                                    .form-group.no-margin
                                        button.btn.btn-primary.btn-block(type='submit')
                                            | Reset Password
                        .footer
                            | Copyright Â© MALICAFE 2018

